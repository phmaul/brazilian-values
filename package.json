{
  "name": "brazilian-values",
  "version": "0.7.4",
  "sideEffects": false,
  "description": "Validates and formats brazilian values, like money (BRL), CPF, CNPJ, dates etc.",
  "keywords": [
    "brazilian",
    "formatters",
    "validators",
    "RG",
    "CPF",
    "CNPJ",
    "real",
    "BRL"
  ],
  "files": [
    "dist/",
    "types/"
  ],
  "author": {
    "name": "Vitor Luiz Cavalcanti",
    "url": "https://vitorluizc.github.io/",
    "email": "vitorluizc@outlook.com"
  },
  "license": "MIT",
  "cdn": "dist/brazilian-values.umd.js",
  "main": "dist/brazilian-values.js",
  "types": "types/brazilian-values.d.ts",
  "unpkg": "dist/brazilian-values.umd.js",
  "module": "dist/brazilian-values.esm.js",
  "jsdelivr": "dist/brazilian-values.umd.js",
  "umd:main": "dist/brazilian-values.umd.js",
  "scripts": {
    "test": "npm run test:code-style && npm run test:types && npm run test:unit",
    "test:unit": "ava",
    "test:code-style": "prettier --check \"./{src,test}/**/*.ts\"",
    "test:types": "tsc --project ./tsconfig.build.json --noEmit",
    "build": "npm run build:types && npm run build:bundles",
    "build:bundles": "rollup --config rollup.config.js",
    "build:types": "tsc --project ./tsconfig.build.json -d --declarationDir ./types --emitDeclarationOnly",
    "prepublishOnly": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VitorLuizC/brazilian-values.git"
  },
  "bugs": {
    "url": "https://github.com/VitorLuizC/brazilian-values/issues"
  },
  "homepage": "https://github.com/VitorLuizC/brazilian-values#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^4.0.0",
    "ava": "^3.5.1",
    "prettier": "^2.0.2",
    "rollup": "^2.2.0",
    "rollup-plugin-license": "^0.13.0",
    "rollup-plugin-terser": "^5.3.0",
    "ts-node": "^8.8.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  }
}
